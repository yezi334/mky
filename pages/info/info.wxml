<view class="cont">
  <form bindsubmit="reg">
    <view class="xing">姓名
      <input placeholder-class='placeholder' placeholder='请输入真实姓名' class="in" name="name" value="{{userinfo.name}}" />
    </view>
    <view class="hr"></view>
  
        <view bindtap="actionSheetTap" class="xing">性别</view>
  <view indicator-style="height: 50px;" style="width: 100%; height: 300px;"  value="{{sex}}"  class="citybody">
  
        <action-sheet hidden="{{actionSheetHidden}}" bindchange="actionSheetbindchange" >
          <block wx:for-items="{{actionSheetItems}}">
            <action-sheet-item data-sex="{{item.sex}}" bindtap="bindsex">{{item.txt}}</action-sheet-item>
          </block>
          <action-sheet-cancel class="cancel">取消</action-sheet-cancel>
        </action-sheet>
    </view>
    <view class="hr"></view>
    <view class="xing">手机号
      <input placeholder-class='placeholder' type="number" placeholder='请输入您的手机号码' class="in" name='tel' value="{{userinfo.tel}}" />
    </view>
    <view class="hr"></view>
    <view class="xing">身份证号码
      <input placeholder-class='placeholder' type="number" placeholder='请输入您的身份证号码' class="in" name='id_num' value="{{userinfo.id_num}}" />
    </view>
    <view class="buttom"></view>
    <view class="xing">所属区域
     
   <!--  <input placeholder-class='placeholder' placeholder='请输入您的所属区域' class="in" name='area' value="{{userinfo.area}}" />>-->

  <input placeholder="选择" value="{{province}}-{{city}}-{{county}}" focus="{{focus}}" bindfocus="open" class="in c6" disabled='true' />
  <view wx:if="{{condition}}" class="citypicker">
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
    <view class="cityheader">
      <view bindtap="open" class="city-cancel">取消</view>
      <view bindtap="open" class="city-true">确定</view>
    </view>
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
  </picker-view>
</view>

    </view>
    <view class="hr"></view>
    <view class="xing">详细地址
      <input placeholder-class='placeholder' placeholder='请输入您的详细地址' class="in" name='address' value="{{userinfo.address}}" />
    </view>
