      <view class="hr"></view>
      <view class="xing">所属银行
        <input placeholder-class='placeholder' placeholder='请选择所属银行' class="in" name='blank' value="{{userinfo.blank}}" wx:if="{hascard==false}}" />
      </view></view>-->
