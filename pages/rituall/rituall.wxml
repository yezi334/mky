<view class="swiper-tab">

  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-otype="10" bindtap="swichNav">待使用</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-otype="20" bindtap="swichNav">已消费</view>
     <view class="weui-navbar-slider" style="transform:translateX({{slideOffset}}px);"></view>

</view>
<view class='ct'></view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px;margin-top:35px;" bindchange="bindChange">

  <swiper-item>
  <scroll-view scroll-y style="height:{{winHeight - 31}}px">
    <view class="search_no" wx:if="{{!orderList0.length}}">
          <text>暂无卡券/(ㄒoㄒ)/~~！</text>
        </view>
  <view class='vou buttom' wx:for="{{orderList0}}" data-cid="{{item.cid}}" bindtap="torecord" >
    <view class='tc img '  >
      <image src="{{item.img}}" class='w90 tc img mt10'></image>
    </view>
   <view class='times font_14 c3  w50 inline mt10'><text class=' font_14 ts'>{{item.title}}</text></view>
    <view class='inline times font_14 c3  mt10'>剩余次数：<text class='blue font_16 ts'>{{item.times}}次</text></view>
    </view>
    </scroll-view>
  </swiper-item>

  <!-- 待付款 -->
 <swiper-item>
 <scroll-view scroll-y style="height:{{winHeight - 31}}px">
     <view class="search_no" wx:if="{{!orderList1.length}}">
          <text>暂无卡券/(ㄒoㄒ)/~~！</text>
        </view>
  <view class='vou buttom' wx:for="{{orderList1}}" data-cid="{{item.cid}}" bintap='torecord' >
    <view class='tc img ' >
      <image src="{{item.img}}" class='w90 tc img mt10'></image>
    </view>
   <view class='times font_14 c3  w50 inline mt10'><text class=' font_14 ts'>{{item.title}}</text></view>
    <view class='inline times font_14 c3  mt10'>消费次数：<text class='blue font_16 ts'>{{item.usetimes}}次</text></view>
    </view>
     </scroll-view>
  </swiper-item>

</swiper>
