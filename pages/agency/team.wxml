<!--pages/user/dingdan.wxml-->
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-otype="pay" bindtap="swichNav">直属</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-otype="deliver" bindtap="swichNav">隶属</view>
   <view class="weui-navbar-slider" style="transform:translateX({{slideOffset}}px);"></view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px;margin-top:40px">
  <!-- 直属 -->
  <swiper-item>
    <view class="search_no" wx:if="{{!orderList0.length}}">
    
      <text>没有人/(ㄒoㄒ)/~~</text>
    </view>
 <scroll-view scroll-y style="height:{{winHeight - 31}}px;">
    <view class="shop df" wx:for="{{orderList0}}" wx:key="*this"  bindtap='tohy' data-uid="{{item.id}}" data-fxlevel="0">
      <image class="weiima" src="{{item.avatarurl}}" wx:if="{{item.avatarurl}}"></image>
      <image class="weiima" src="/images/my/tx.jpg" wx:else></image>
      <view class="df_1">
        <text class="c3 font_17" wx:if="{{item.name}}" >{{item.name}}</text>
      </view>
    </view>
    <view class="mt10 tc c6 font_17" wx:if="{{orderList0.length}}">共有{{count0}}个直属会员</view>
</scroll-view>
  </swiper-item>
  <!-- 隶属 -->
  <swiper-item>
    <view class="search_no" wx:if="{{!orderList1.length}}">
      <text>没有人/(ㄒoㄒ)/~~</text>
    </view>
     <scroll-view scroll-y style="height:{{winHeight - 31}}px;">
    <view class="shop df" wx:for="{{orderList1}}" wx:key="*this"  bindtap='tohy' data-uid="{{item.id}}" data-fxlevel="1">
       <image class="weiima" src="{{item.avatarurl}}" wx:if="{{item.avatarurl}}"></image>
      <image class="weiima" src="/images/my/tx.jpg" wx:else></image>
      <view class="df_1">
        <text class="c3 font_17" wx:if="{{item.name}}">{{item.name}}</text>
      </view>
    </view>
    <view class="mt10 tc c6 font_17" wx:if="{{orderList1.length}}">共有{{count1}}个隶属会员</view>
    </scroll-view>
  </swiper-item>

</swiper>