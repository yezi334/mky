  <button class="bg_bule  w100 font_17 white " data-status="1" bindtap="tobuy" bindgetuserinfo="bindGetUserInfo" open-type="getUserInfo" wx:if="{{itemData.order==1}}">立刻预定</button>
  <button class="bg_bule  w100 font_17 white " data-status="1" bindtap="tobuy" bindgetuserinfo="bindGetUserInfo" open-type="getUserInfo" wx:else>立刻购买</button>
</view>