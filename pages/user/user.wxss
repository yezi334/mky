/* pages/user/user.wxss */
page{
  background:#eee;

}
.page{
  background:#eee;

}

.me {
  height: 100%;
}
.bg {
  width: 750rpx;
}
.userinfo {
  position: relative;
  width: 750rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 会员 */
.hy {
  width: 76px;
  height: 23px;
  text-align: center;
  text-decoration: none;
  line-height: 23px;
  border-radius: 11px;
  border: 1px solid rgb(255, 255, 255);
}
.tp7 {
  top: 108px;
}
.tp3 {
  top: 145px;
}
.userinfo-avatar {
  display: block;
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.userinfo-nickname {
  color: #fff;
  font-size: 14px;
}
.sc {
  background: #fff;
  width: 100%;
  font-size: 12px;
  line-height: 16px;
  color: #666;
  padding: 4% 0;
}
.sc image {
  width: 24px;
  height: 24px;
  display: inline-block;
}
.bte {
  border-top: 1px solid #eee;
}
/*menu list*/

.tableviewcell {
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #ddd;
  color: #666;
background: #fff;
  display: flex;
  align-items: center;
}

/*icon*/

.tableviewcell image {
  width: 60rpx;
  height: 60rpx;
}

/*text*/

.tableviewcell text {
  font-size: 15px;
  margin-left: 10px;
}

/*button*/

.logout {
  margin: 30rpx;
}

/*order*/

.order-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  margin: 20rpx 0;
  padding: 20rpx 0;
}

.order {
  width: 33.3%;
  text-align: center;
}

.order image {
  width: 90rpx;
  height: 90rpx;
}

.order text {
  display: block;
  font-size: 30rpx;
  color: #333;
}

.footfixed1 {
  display: block;
  position: absolute;
  top: 80%;
  left: 0;

  z-index: 100;
  width: 100%;
  font-size: 14px;
  line-height: 50px;
}

.wx_pay_submit {
  background: #fff;
 

