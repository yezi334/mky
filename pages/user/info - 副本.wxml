      <view class="xing">银行卡卡号{{hascard}}
        <input placeholder-class='placeholder' type="number" placeholder='请输入您的银行卡号码' class="in" name='card' value="{{userinfo.card}}" wx:if="{hascard==true}}" />
      </view>
      <view class="hr"></view>
      <view class="xing">所属银行
        <input placeholder-class='placeholder' placeholder='请选择所属银行' class="in" name='blank' value="{{userinfo.blank}}" wx:if="{hascard==false}}" />
      </view></view>-->
<view  style="height:50px"></view>
    <view   style="display:hidden" >
      <button type="" form-type="submit" hover-class='button-hover' style="opacity: {{opacity}};" disabled="{{disabled}}" class='su'>保存并使用</button>

    </view>
  </form>
</view>