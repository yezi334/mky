<view class="page">
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-otype="10" bindtap="swichNav">待付款</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-otype="20" bindtap="swichNav">代发货</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" data-otype="30" bindtap="swichNav">已收货</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" data-otype="40" bindtap="swichNav">已完成</view>
     <!--  <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" data-otype="50" bindtap="swichNav">退款售后</view> -->
   <view class="weui-navbar-slider" style="transform:translateX({{slideOffset}}px);"></view>
  </view>
  <swiper current="{{currentTab}}" class="swiper-box" style="height:{{winHeight-45}}px;margin-top:90rpx" bindchange="bindChange">
    <!-- 待付款 -->
    <swiper-item>
      <scroll-view scroll-y style="height:{{winHeight-40}}px;">
        <view class="search_no" wx:if="{{!orderList0.length}}">
          <view class="font_14">
            <image class="nopg" src="/images/my/kdd.png"></image>
          </view>
          <text>您还没有相关订单！</text>
        </view>
        <view class="shop df p_le10" wx:for="{{orderList0}}">
          <view class="wid">
            <view class="sp_text ">
              <navigator url="../order/detail?id={{item.id}}" hover-class="changestyle">
                <view class="sp_tit ovh1">订单号：{{item.order_sn}}</view>
                <view class="bok" style="display:flex">
                  <view style="width:39%">
                    <image class="sh_slt le10" src="{{item.photo_x}}"></image>
                  </view>
                  <view style="float:right;margin-right:10px hidden">
                    <view class='name'>{{item.name}}</view>
                    <view class="sp_neb">
                      <text class="text1">统一价：</text>
                      <text class="text2">¥ {{item.price}}</text>
                    </view>
                    <view class="sp_neb">
                      <text class="text1">实付款：</text>
                      <text class="text2">¥ {{item.needpay}}</text>
                    </view>
                    <view class="sp_neb">
                      <text class="text1">下单时间¥：{{item.addtime}}</text>
                    </view>
                  </view>
                </view>
              </navigator>
              <view class="blue fl_r btt">
                <view class="font_14 bt" bindtap="wxpay" data-order="{{item.order_sn}}">立即支付</view>
              </view>
            </view>

          </view>
        </view>
      </scroll-view>
